{# templates/oeuvre/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle œuvre{% endblock %}

{% block body %}
    <h1>Ajouter une nouvelle œuvre</h1>
<form method="post" enctype="multipart/form-data" data-turbo="false">
    {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.artiste) }}
        {{ form_row(form.date) }}
        {{ form_row(form.type) }}
        {{ form_row(form.technique) }}
        {{ form_row(form.lieuCreation) }}
        {{ form_row(form.dimensions) }}
        {{ form_row(form.mouvement) }}
        {{ form_row(form.collection) }}
        {{ form_row(form.description) }}
        {{ form_row(form.image) }}
        <button class="btn btn-primary">{{ form_row(form.save) }}</button>
    {{ form_end(form) }}
    </form>
{% endblock %}
