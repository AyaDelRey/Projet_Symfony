{# templates/message/user_list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>
    <ul>
        {% for user in users %}
            <li>{{ user.username }} - <a href="{{ path('message_new', {'receiverId': user.id}) }}">Envoyer un message</a></li>
        {% endfor %}
    </ul>
{% endblock %}
